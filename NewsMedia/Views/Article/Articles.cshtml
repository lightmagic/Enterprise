@{
    ViewBag.Title = "Articles";
}

<h2>Articles</h2>

<table border="1">
    <tr>
        <th>ArticleTitle</th>
        <th>Content</th>
        
    </tr>
    
    @foreach (var article in Model)
    {
        <tr>
            <td>@article.Title</td>
            <td>@article.Content</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Title = article.Title }, new { @style = "color:blue" })
                @Html.ActionLink("Delete", "DeleteArticle", new { Title = article.Title }, new { @style = "color:blue"})
            </td>
            
        </tr>

    }

        <br />
        <h4>@Html.ActionLink("Create a new Article", "Create")</h4>
    

    
