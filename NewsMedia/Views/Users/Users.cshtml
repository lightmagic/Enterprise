@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>


<table border="1">
    <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-mail Address</th>
        <th>Profile Description</th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.firstName</td>
            <td>@user.lastName</td>
            <td>@user.email</td>
            <td>@user.profileDesc</td>
            <td>
                @*one of many html helpers*@
                @Html.ActionLink("Display", "Author", new { username = user.UserName }, new { @style = "color:blue" })
                @Html.ActionLink("Edit", "UserEdit", new { username = user.UserName }, new { @style = "color:blue" })
                @Html.ActionLink("Delete", "DeleteUser", new { username = user.UserName }, new { @style = "color:blue" })
            </td>
        </tr>
    }
</table>